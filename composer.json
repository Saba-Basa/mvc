{
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Core\\": "src/Core/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1"
    },
    "scripts": {
        "dev": "php -S localhost:8000 -t public/",
        "test": "vendor/bin/phpunit",
        "test:controller": "vendor/bin/phpunit tests/Controllers/"
    }
}